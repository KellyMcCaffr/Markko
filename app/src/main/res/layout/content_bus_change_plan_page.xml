<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bob.markkouserloginsignup.busChangePlanPage"
    tools:showIn="@layout/activity_bus_change_plan_page">

    <TextView
        android:id="@+id/planOneBodyViewBox"
        android:layout_width="326dp"
        android:layout_height="110dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="38dp"
        android:background="@android:color/black"
        android:onClick="newPlanViewOneClicked"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView82"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>

    <TextView
        android:id="@+id/planTwoBodyViewBox"
        android:layout_width="326dp"
        android:layout_height="170dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="33dp"
        android:background="@android:color/black"
        android:onClick="newPlanViewTwoClicked"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planOneBodyViewBox"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>

    <TextView
        android:id="@+id/textView82"
        android:layout_width="329dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="Click below to select a new plan "
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/businessMenu"
        android:layout_width="51dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="305dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView82"
        android:layout_marginStart="305dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="backToPlan"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/planTwoBodyViewBox"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/planOneTitleViewBox"
        android:layout_width="326dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/black"
        android:onClick="newPlanViewOneClicked"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/planOneBodyViewBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView82"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/planTwoTitleViewBox"
        android:layout_width="326dp"
        android:layout_height="24dp"
        android:layout_marginTop="9dp"
        android:background="@android:color/black"
        android:onClick="newPlanViewTwoClicked"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/planOneBodyViewBox"
        app:layout_constraintRight_toRightOf="@+id/planOneBodyViewBox"
        app:layout_constraintTop_toBottomOf="@+id/planOneBodyViewBox"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/errorViewBoxP"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/businessMenu"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
